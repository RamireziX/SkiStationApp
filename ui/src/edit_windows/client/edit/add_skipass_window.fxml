<AnchorPane prefHeight="135.0" prefWidth="212.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edit_windows.client.edit.AddSkipassWindowController">
    <children>
        <VBox>
            <children>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" prefHeight="17.0" prefWidth="129.0" text="Długość karnetu (dni)" />
                        <ChoiceBox fx:id="durationChoiceBox" prefHeight="25.0" prefWidth="194.0" GridPane.columnIndex="1" />
                        <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" prefHeight="17.0" prefWidth="129.0" text="Karnety" GridPane.rowIndex="1" />
                        <HBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <ComboBox fx:id="discountTypeComboBox" prefHeight="25.0" prefWidth="193.0" promptText="Rodzaj ulgi" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </GridPane>
                <HBox alignment="CENTER" prefHeight="25.0" prefWidth="270.0" spacing="50.0">
                    <children>
                        <Button fx:id="acceptButton" defaultButton="true" mnemonicParsing="false" prefHeight="25.0" prefWidth="52.0" text="Ok" />
                        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Anuluj" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
